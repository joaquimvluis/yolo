  <% end %>

  <p class="text-grey">Select your experiences to add to your bucket list</p>

  <div class="row experiences mt-4">
    <% @experiences[0..5].each do |experience| %>
      <div class="col-12 col-lg-6 width: 300px;">
        <%= link_to experience_path(experience), class:"text-decoration-none" do %>
          <div class="card-main mb-4 justify-content-center" style= "width: 450px;">
            <%= cl_image_tag experience.photo.key, height: 300, width: 400 %>
            <div class="card-main-infos text-black">
              <div>
                <h5><%=experience.title%></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


