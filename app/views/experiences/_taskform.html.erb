  <%= simple_form_for ([experience, task]), remote: true do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-actions">
    <%= f.input :title, input_html: { value: @experience.title } %>
    <%= f.input :deadline, html5: true %>
    <%= f.input :penalty, placeholder: "Add a penalty to help you kickstart!" %>
  </div>
  <%= f.button :submit, class: "btn-main" %>
<% end %>
