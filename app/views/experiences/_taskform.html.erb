  <%=simple_form_for ([experience, task]) do |f| %>
    <%= f.error_notification %>
  <div class="form-actions">
    <%= f.input :title, input_html: { value: @experience.title }, class:'form-font-color', hint: 'Please mind the limit of 50 Characters'%>
    <%= f.input :deadline, html5: true, input_html: { class:'form-control'} %>
    <%= f.input :penalty, hint: "Add a penalty to help you kickstart!", input_html: { class:'form-control'} %>
  </div>
  <%= f.button :submit, class: "btn-main" %>
<% end %>
