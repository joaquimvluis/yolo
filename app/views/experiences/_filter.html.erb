<div class="container">
  <ul class="list-group list-group-horizontal justify-content-center">
    <% categories.each do |category| %>
      <li class="list-group-item">
        <%= link_to root_path do %>
          <h5><%= category.name %></h5>
          <i class="fa-solid fa-trees"></i>
        <% end %>
      </li>
    <% end %>
  </li>
</ul>
</div>
