<%# <div class="container"> %>
  <div class="row justify-content-center">
    <div class="col-2 m-2 card-main">
      <h4 class="m-3 p-3 border-bottom">FILTER BY</p>

    </div>

    <div class="col-6 card m-2 card-main">
      <h1 class="d-flex justify-content-center">Here is your bucket-list:</h1>
      <main>
        <% @usertasks.each.with_index do |task, index| %>
          <div class="card-bucketlist">
              <div class="inner">
                <%= render "checkboxform", task: task %>
                <p class="subtitle">Your Deadline: <%= task.task.deadline %><p>
                <p class="subtitle">Your chosen penalty: <%= task.task.penalty %></p>
              </div>
          </div>
        <% end %>
      <main>


      <% @usertasks.each.with_index do |task, index| %>
        <div class="card m-3">
          <h4><%= task.task.experience.title %></h4>
          <div data-controller="complete-task">
            <%= form_for task, html: {
              # class: "d-none",
              data: {
                complete_task_target: "form",
              }
            } do |f| %>
              <div class="form-check">
                <%= f.check_box :completed, data: { action: "change->complete-task#update" }, class: "form-check-input", id: dom_id(task, :checkbox) %>
                <label class="form-check-label user-select-none" for="<%= dom_id(task, :checkbox) %>">
                  Completed
                </label>
              </div>
            <% end %>
            <p>Deadline: <%= task.task.deadline %></p>
            <p>Your chosen penalty: <%= task.task.penalty %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-3 card m-2 d-flex card-main">
      <figure class="snip1336 hover"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample74.jpg" alt="sample74" />
        <figcaption>
          <% if @user.photo.key.present? %>
             <img src=<%= cl_image_path(@user.photo.key, width: 500, height: 500, crop: :thumb, gravity: :face) %> alt="profile-sample2" class="profile" />
          <% else %>
            <img src="https://media.istockphoto.com/photos/young-woman-ready-for-job-business-concept-picture-id1318482009" alt="profile-sample2" class="profile" />
          <% end %>

          <h2>Welcome, <%= @user.first_name.nil? ? "User!" : @user.first_name %><span>Your status: Adventurer</span></h2>
          <div class="mt-4">
            <p>About you: </p>
            <p><%= @user.bio.nil? ? "Please add your bio!" : "#{@user.bio}" %></p>
          </div>

          <% if @completed == 0 %>
            <div> <p class="mt-4"> <strong> Start working on your Bucket-List!</strong></p> </div>
          <% else %>
            <div> <p class="mt-4">Congrats! You have <%= pluralize @completed, "bucket-list-item" %> completed!</p> </div>
          <% end %>


          <div class="d-flex justify-content-end">
            <%= link_to "Update Profile", edit_user_path(@user), class: "btn-main snip1336 btn-location" %>
          </div>

          <div class="d-flex p-1 justify-content-end">
            <a class="border-0" href="#"><i class="fa fa-twitter"></i></a>
            <a class="border-0" href="#"><i class="fa fa-linkedin"></i></a>
            <a class="border-0" href="#"><i class="fa fa-facebook"></i></a>
          </div>

        </figcaption>
      </figure>
    </div>
  </div>
<%# </div> %>
