<%# <div class="container"> %>
  <div class="row justify-content-center">
    <div class="col-2 card m-2">
      <p>FILTER BY</p>
    </div>

    <div class="col-6 card m-2">
      <h1>Here is your bucket-list:</h1>
      <% @usertasks.each.with_index do |task, index| %>
        <div class="card m-3">
          <h4><%= task.task.experience.title %></h4>
          <div data-controller="complete-task">
            <%= form_for task, html: {
              # class: "d-none",
              data: {
                complete_task_target: "form",
              }
            } do |f| %>
              <div class="form-check">
                <%= f.check_box :completed, data: { action: "change->complete-task#update" }, class: "form-check-input", id: dom_id(task, :checkbox) %>
                <label class="form-check-label user-select-none" for="<%= dom_id(task, :checkbox) %>">
                  Completed
                </label>
              </div>
            <% end %>
            <p>Deadline: <%= task.task.deadline %></p>
            <p><%= task.task.penalty %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-2 card m-2 d-flex align-content-stretch card">
      <figure class="snip1336 hover"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample74.jpg" alt="sample74" />
        <figcaption>
          <img src=<%= cl_image_path(@user.photo.key, width: 200, height: 200, crop: :thumb, gravity: :face) %> alt="profile-sample2" class="profile" />
          <h2>Welcome, <%= @user.first_name.nil? ? "User!" : @user.first_name %><span>Adventurer</span></h2>
          <p><%= @user.bio.nil? ? "Please add your bio!" : @user.bio %></p>
          <div class="d-flex">
          <%= link_to "Update", edit_user_path(@user), class: "info" %>
          <a href="#" class="follow ">Follow</a>
          </div>
          <div class="d-flex p-1">
            <a class="border-0" href="#"><i class="fa fa-twitter"></i></a>
            <a class="border-0" href="#"><i class="fa fa-linkedin"></i></a>
            <a class="border-0" href="#"><i class="fa fa-facebook"></i></a>
          </div>
        </figcaption>
      </figure>
    </div>
  </div>

<%# </div> %>
