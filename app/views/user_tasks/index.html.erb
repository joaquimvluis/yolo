
  <button class="btn-main p-3 float-end" id="createtask">Create a new task</button>
<div class="background-dash">
<div class="p-4">
</div>

<%# <div class="container"> %>

<div class="row justify-content-center" data-controller="complete-task" style="min-height:84vh">
    <div class="col-2 card m-1 card-main p-3 list-style: none rounded-3">
      <div class="filterby mb-4">
        <div class="d-flex justify-content-center">
          <%# <h6 class="d-inline" data-controller="kpi" data-action="adjust-kpi@window->kpi#adjustNumber"><%= @completed %></h6>
          <%# <h3 class="h3-dash d-inline ms-2">Completed Tasks! </h3> %>

          <h5 class="h3-dash d-inline ms-2"> Your Open To Do: </h5>
          <h6 class="d-inline ms-1" data-controller="kpi" data-action="adjust-kpi@window->kpi#adjustNumberOpen"><%=  @open %></h6>
        </div>
        <div data-controller="kpi" data-action="adjust-kpi@window->kpi#adjustText">
            <div data-kpi-target="kpitext">
            <% if @completed == 0 %>
            <p class="bio-text mt-4">Start working on your bucketlist</p>
            <% else %>
              <p class="bio-text mt-4"> <i class="fa-regular fa-party-horn"></i>Congrats! You have <%= pluralize @completed, "adventure" %> completed!</p>
              <div class="mb-5">
                <p class="bio-text mt-3 mb-1">Your score:</p>
                <h6 class="d-inline" ><%= @completed * 100 %></h6>
                <p class="bio-text mt-3 d-inline">points</p>
              </div>
            <% end %>
            </div>
          </div>
      </div>
    </div>

    <div class="col-7 card m-1 card-main rounded-3 ">
      <%# <div class="m-2 card-main snip1336">
        <h4 class="p-2 justify-content-center border-bottom">FILTER BY</p>
      </div> %>

      <div>
        <h1 class="d-flex justify-content-center pt-4 ml-3 px-3 d-inline text-black"><%= @user.first_name.nil? ? "User!" : @user.first_name %>'s bucket-list</h1>
        <div class ="filter d-flex d-inline justify-content-center">

            <%= link_to user_user_tasks_path do %>
              <div class="filter mt-1" style="list-style: none;">
              <i class="fa-sharp fa-solid fa-rotate-left"></i>
              <span>See all</span>
              </div>
            <% end %>

            <%= link_to user_user_tasks_path(status: false) do %>
              <div class="filter ms-5 mt-1" style="list-style: none;">
                <i class="fas fa-bullhorn"></i>
                <span>To do</span>
              </div>
            <% end %>

            <%= link_to user_user_tasks_path(status: true) do %>
              <div class="filter ms-5 mt-1" style="list-style: none;">
                <i class="far fa-check-circle"></i>
                <span>Done</span>
              </div>
            <% end %>
        </div>

      </div>
       <div>
        <main>
          <% @usertasks.each.with_index do |task, index| %>
            <div class="card-bucketlist">
                <div class="inner">
                  <%= render "checkboxform", task: task %>

                  <i class="fa-regular fa-bullseye-arrow"></i>
                  <% if task.task.deadline.present? %>
                    <p class="subtitle" id="deadline">Deadline: <%= task.task.deadline.to_formatted_s(:long) %> <p>
                  <% end %>
                  <% if task.task.penalty.present? %>
                    <p class="subtitle"><i class="fa-solid fa-fire"></i> <%= task.task.penalty%></p>
                  <% end %>
                  <%= link_to "See full experience", experience_path(task.task.experience) %>
                  <%= link_to "Delete",
                    user_task_path(task),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>

                </div>
            </div>
          <% end %>
        <main>
      </div>
    </div>

    <div class="col-2 card m-1 d-flex p-3 rounded-3 text-center">
      <%# <figure class="snip1336 hover"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample74.jpg" alt="sample74" />
        <figcaption> %>
        <div>
          <% if @user.photo.key.present? %>
             <img src=<%= cl_image_path(@user.photo.key, width: 500, height: 500, crop: :thumb, gravity: :face) %> alt="profile-sample2" class="avatar-dash" />
          <% else %>
            <img src="https://media.istockphoto.com/photos/young-woman-ready-for-job-business-concept-picture-id1318482009" alt="profile-sample2" class="avatar-dash" />
          <% end %>
        </div>
          <h2 class="mt-2 mb-0">Hi, <%= @user.first_name.nil? ? "User!" : @user.first_name %></h2>
          <div class="wavy-line small"></div>
          <div class="bio-text mt-3"></i> <p><%= @user.bio.nil? ? "Please add your bio!" : "#{@user.bio}" %></p>
        </div>




          <%# data-action: "change->complete-task#update" %>


          <div class="d-flex justify-content-end mb-4">
            <%= link_to "Update Profile", edit_user_path(@user), class: "btn-main snip1336 w-100 btn-location" %>
          </div>

          <div class="dash-icons d-flex p-3 justify-content-center">
          <p class="bio-text mt-3">Share</p>
            <a class="border-0 p-2" href="#"><i class="fab fa-instagram"></i></a>
            <a class="border-0 p-2" href="#"><i class="fab fa-facebook"></i></a>
            <a class="border-0 p-2" href="#"><i class="fa fa-envelope"></i></a>
          </div>

        </figcaption>
      </figure>
    </div>
</div>
</div>
