<div class="background-dash">
  <div class="row justify-content-center" style="min-height:84vh">
    <div class="col-2 card m-1 card-main p-3 list-style: none rounded-3">
      <div style="height:100px; width:100%; clear:both;"></div>
      <div class="filterby mb-4">
      <h2 class="">Your Rewards</h2>
      <div class="wavy-line small">
      </div>

        <div data-controller="kpi" data-action="adjust-kpi@window->kpi#adjustText">
            <div data-kpi-target="kpitext">
              <% if @completed == 0 %>
                <h5 class="bio-text mt-4">Start working on your bucketlist!</h5>
              <% else %>
                <h5 class="bio-text mt-4"> <i class="fa-regular fa-party-horn"></i>Congrats! You have <%= pluralize @completed, "adventure" %> completed!</h5>
                <div class ="row">
                <div class ="col-2">
                <i class="fa-solid fa-award"></i>
                </div>
                <div class="mb-5 col-8">
                  <h5 class="bio-text mt-3 mb-1">Your score:</h5>
                  <h6 class="d-inline" ><%= @completed * 100 %></h6>
                  <h5 class="bio-text mt-3 d-inline">points</h5>
                </div>
                </div>
              <% end %>
            </div>
            <div class="d-flex">
          <h5 class="bio-text d-inline ms-2"> Your Open To Do: </h5>
          <h5 class="d-inline ms-2" data-controller="kpi" data-action="adjust-kpi@window->kpi#adjustNumberOpen"><%=  @open %></h5>
        </div>
        </div>
      </div>
 </div>
    <div class="col-7 card m-1 card-main rounded-3 ">
      <div>
        <h1 class="d-flex justify-content-center pt-4 ml-3 px-3 d-inline text-black"><%= @user.first_name.nil? ? "User!" : @user.first_name %>'s bucket-list</h1>
        <div class ="d-flex d-inline justify-content-center ms-4">
            <%= link_to user_user_tasks_path do %>
              <div class="border filter px-3 me-1" style="list-style: none;">
              <i class="fa-sharp fa-solid fa-rotate-left"></i>
              <span>See all</span>
              </div>
            <% end %>

            <%= link_to user_user_tasks_path(status: false) do %>
              <div class="border filter px-3 me-1" style="list-style: none;">
                <i class="fas fa-bullhorn"></i>
                <span>To do</span>
              </div>
            <% end %>

            <%= link_to user_user_tasks_path(status: true) do %>
              <div class="border filter px-3 me-1" style="list-style: none;">
                <i class="far fa-check-circle"></i>
                <span>Done</span>
              </div>
            <% end %>
        </div>

      </div>
      <div>
        <main>
          <% @usertasks.each.with_index do |task, index| %>
            <div class="card-bucketlist">
                <div class="inner">
                  <%= render "checkboxform", task: task %>

                  <i class="fa-regular fa-bullseye-arrow"></i>
                  <% if task.task.deadline.present? %>
                    <p class="subtitle" id="deadline">Deadline: <%= task.task.deadline.to_formatted_s(:long) %> <p>
                  <% end %>
                  <% if task.task.penalty.present? %>
                    <p class="subtitle"><i class="fa-solid fa-fire"></i> <%= task.task.penalty%></p>
                  <% end %>
                  <%= link_to "See full experience", experience_path(task.task.experience) %>
                  <%= link_to "Delete",
                    user_task_path(task),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                  %>

                </div>
            </div>
          <% end %>
        <main>
      </div>
    </div>

    <div class="col-2 card m-1 card-main d-flex p-3 rounded-3 text-center">
      <div style="height:160px">
        <% if @user.photo.key.present? %>
          <img src=<%= cl_image_path(@user.photo.key, width: 500, height: 500, crop: :thumb, gravity: :face) %> alt="profile-sample2" class="avatar-dash mt-2" />
        <% else %>
          <img src="https://media.istockphoto.com/photos/young-woman-ready-for-job-business-concept-picture-id1318482009" alt="profile-sample2" class="avatar-dash" />
        <% end %>
      </div>
      <h2 class="mt-3 mb-0">Hi, <%= @user.first_name.nil? ? "User!" : @user.first_name %></h2>
      <div class="wavy-line small">
      </div>
      <div class="bio-text mt-3"></i> <p><%= @user.bio.nil? ? "Please add your bio!" : "#{@user.bio}" %></p>
      </div>

      <div class="dash-icons d-flex p-3 justify-content-center">
        <p class="bio-text mt-3">Share</p>
        <a class="border-0 p-2" href="#"><i class="fab fa-instagram"></i></a>
        <a class="border-0 p-2" href="#"><i class="fab fa-facebook"></i></a>
        <a class="border-0 p-2" href="#"><i class="fa fa-envelope"></i></a>
      </div>
      <div class="d-flex justify-content-end mb-4">
        <%= link_to "Update Profile", edit_user_path(@user), class: "btn-main snip1336 w-100 btn-location" %>
      </div>
    </div>
  </div>
</div>
